<div class="container my-5">
  <div class="row justify-content-center g-4">

    <!-- Main Playlist Card -->
    <div class="col-md-8">
      <div class="card new-playlist-card p-4 shadow-sm">
        <h1 class="mb-3">New playlist</h1>
        <p class="mb-4">What are you in the mood to listen to? ğŸ¶ğŸµ</p>

  <div class="col-md-3">
    <h2>Chats</h2>
    <div class="mb-4">
      <% if @user_playlists.present? %>
        <ul>
          <% @playlist.tracks.each do |playlist| %>
            <li><%= link_to playlist.title, playlist_path(playlist) %> </li>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar with Previous Playlists -->
    <div class="col-md-4">
      <div class="card sidebar-card p-3 shadow-sm">
        <h2 class="mb-3">Chats</h2>
        <% if @user_playlists.present? %>
          <ul class="list-unstyled">
            <% @user_playlists.each do |playlist| %>
              <li><%= link_to playlist.title, playlist_path(playlist), class: "d-block mb-1" %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">There are no chats yet.</p>
        <% end %>
      </div>
    </div>

  </div>

  <div class="mt-4 text-center">
   <%= link_to "Back to playlists", playlists_path, class: "btn back-btn" %>
  </div>
</div>
