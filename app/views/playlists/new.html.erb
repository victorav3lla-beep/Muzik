  <% @chat.messages.each do |message| %>
    <p>
      <strong><%= message.role_string %></strong>
      <%= raw((message.content)) %>
    </p>
  <% end %>
  <div id="new_message_container">
    <%= simple_form_for [@chat, @message] do |f| %>
      <%= f.input :content, label: "", required: true, placeholder: "I want to discover new muzik" %>
      <%= f.button :submit, 'Create Playlist', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div class="col-md-3">
    <h2>Chats</h2>
    <div class="mb-4">
      <% if @playlist.tracks.any? %>
        <ul>
          <% @playlist.tracks.each do |playlist| %>
            <li><%= link_to playlist.title, playlist_path(playlist) %> </li>
          <% end %>
        </ul>
      <% else %>
        There are no chats yet.
      <% end %>
    </div>
  </div>
<%= link_to "Back to playlists", playlists_path, class: "button" %>
