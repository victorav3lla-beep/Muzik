<h1>My Playlists</h1>
<p>Follow me!</p>

<%= link_to "Create New Playlist", new_playlist_path, class: "btn btn-primary mb-3"%>

<div class="playlist-list">
  <% @playlists.each do |playlist| %>
    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title"><%= link_to playlist.title, playlist_path(playlist) %></h5>
          <p class="text-muted mb-0">By <%= playlist.user.email %></p>
        </div>
        <%= bookmark_button(playlist) %>
      </div>
    </div>
  <% end %>
</div>

