<!-- app/views/users/show.html.erb -->

<div class="container my-5">
  <div class="row">
    <!-- User Profile Sidebar -->
    <div class="col-lg-3 col-md-4 mb-4">
      <div class="card card-custom text-center p-4" style="position: sticky; top: 80px;">
        <div style="position: relative; display: inline-block; margin: 0 auto;">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-profile mb-3" %>
          <div style="position: absolute; bottom: 10px; right: -5px; width: 20px; height: 20px; background: linear-gradient(135deg, #ff953d, #601fc1); border-radius: 50%; border: 3px solid rgba(9, 32, 62, 0.95); box-shadow: 0 0 10px rgba(255, 149, 61, 0.6);"></div>
        </div>

        <h3 class="fw-bold mb-2" style="background: linear-gradient(135deg, #ff953d, #601fc1); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-size: 1.6rem; letter-spacing: -0.02em;">
          <%= @user.username %>
        </h3>
        <p class="text-muted mb-4 small"><i class="fas fa-envelope me-2"></i><%= @user.email %></p>

        <div class="d-flex justify-content-around text-center mb-4">
          <div class="flex-fill" style="padding: 1rem; background: rgba(255, 149, 61, 0.1); border-radius: 12px; margin: 0 0.25rem;">
            <h4 class="fw-bold mb-0" style="color: #ff953d;"><%= @playlists.count %></h4>
            <small class="text-muted d-block" style="font-size: 0.75rem;">Playlists</small>
          </div>
          <div class="flex-fill" style="padding: 1rem; background: rgba(96, 31, 193, 0.1); border-radius: 12px; margin: 0 0.25rem;">
            <h4 class="fw-bold mb-0" style="color: #601fc1;">0</h4>
            <small class="text-muted d-block" style="font-size: 0.75rem;">Followers</small>
          </div>
        </div>

        <div class="d-grid gap-2">
          <%= link_to edit_user_registration_path, class: "btn btn-outline-primary btn-sm" do %>
            <i class="fas fa-edit me-2"></i>Edit Profile
          <% end %>
        </div>
      </div>
    </div>

    <!-- User's Playlists Grid -->
    <div class="col-lg-9 col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-shadow-soft" style="letter-spacing: -0.02em;">
          <i class="fas fa-music me-2" style="color: #ff953d; filter: drop-shadow(0 0 8px rgba(255, 149, 61, 0.4));"></i>My Playlists
        </h2>
        <%= link_to new_playlist_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i>New Playlist
        <% end %>
      </div>

      <% if @playlists.any? %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% @playlists.each_with_index do |playlist, index| %>
            <div class="col" style="animation: fadeInUp 0.5s ease-out <%= index * 0.1 %>s; animation-fill-mode: both;">
              <div class="card card-custom h-100" style="cursor: pointer;">
                <div class="card-body d-flex flex-column">
                  <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0 me-3">
                      <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #ff953d, #601fc1); border-radius: 12px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(255, 149, 61, 0.3);">
                        <i class="fas fa-list-music fa-lg" style="color: white;"></i>
                      </div>
                    </div>
                    <div class="flex-grow-1">
                      <h5 class="card-title fw-bold mb-1" style="font-size: 1.1rem;">
                        <%= link_to playlist.title, playlist_path(playlist), class: "stretched-link text-white text-decoration-none" %>
                      </h5>
                      <small style="color: rgba(255, 255, 255, 0.6);"><i class="fas fa-clock me-1"></i>Created recently</small>
                    </div>
                  </div>

                  <p class="card-text small flex-grow-1" style="color: rgba(255, 255, 255, 0.75); line-height: 1.5;">
                    <%= truncate(playlist.content, length: 100) %>
                  </p>

                  <div class="card-footer bg-transparent border-top mt-3 pt-3 px-0">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <span class="badge" style="background: rgba(255, 149, 61, 0.2); color: #ff953d; padding: 0.5rem 0.75rem; border-radius: 8px;">
                          <i class="fas fa-music me-1"></i><%= playlist.tracks.count %> Tracks
                        </span>
                      </div>
                      <i class="fas fa-chevron-right" style="color: rgba(255, 255, 255, 0.4);"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card card-custom p-5 text-center" style="background: linear-gradient(135deg, rgba(96, 31, 193, 0.1), rgba(255, 149, 61, 0.1));">
          <div class="mb-4">
            <i class="fas fa-compact-disc fa-4x mb-3" style="color: rgba(255, 255, 255, 0.3); animation: spin 4s linear infinite;"></i>
          </div>
          <h4 class="fw-bold mb-2" style="letter-spacing: -0.01em; font-size: 1.4rem;">No Playlists Yet</h4>
          <p class="mb-4" style="color: rgba(255, 255, 255, 0.7); font-weight: 300; font-size: 1.05rem;">It's quiet in here... Let's make some noise!</p>
          <%= link_to new_playlist_path, class: "btn btn-primary mx-auto", style: "width: fit-content;" do %>
            <i class="fas fa-plus me-2"></i>Create your first playlist
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.card-custom:hover .fa-chevron-right {
  color: #ff953d !important;
  transform: translateX(5px);
  transition: all 0.3s ease;
}
</style>
